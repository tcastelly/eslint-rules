{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "target": "es5",
    "lib": ["es2016", "dom"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
